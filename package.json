{
  "name": "personal-site-wordpress-port",
  "version": "0.1.0",
  "description": "Theme for a project porting my personal site to WordPress",
  "author": "Ty Mick",
  "license": "GPL-2.0-or-later",
  "homepage": "http://wordpress-port.tymick.me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tywmick/personal-site-wordpress-port.git"
  },
  "devDependencies": {
    "@wordpress/scripts": "^9.0.0",
    "archiver": "^4.0.1",
    "node-sass": "^4.14.0",
    "prettier": "^2.0.5",
    "rtlcss": "^2.5.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "compile:css": "node-sass --include-path node_modules sass/style.scss style.css",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
    "bundle": "node bin/bundle.js"
  },
  "dependencies": {
    "bootstrap": "^4.4.1"
  }
}
